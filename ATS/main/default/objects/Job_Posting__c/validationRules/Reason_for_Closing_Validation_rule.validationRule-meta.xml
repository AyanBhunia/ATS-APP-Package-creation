<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_for_Closing_Validation_rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Job_Status__c , &apos;Closed&apos;),  
    ISBLANK( Reason_for_Closing__c)
)</errorConditionFormula>
    <errorDisplayField>Reason_for_Closing__c</errorDisplayField>
    <errorMessage>Please Fill Reason for Closing the Job</errorMessage>
</ValidationRule>
